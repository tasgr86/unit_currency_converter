<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row_constraint">

    <TextView
            android:text="TextView"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/row_label"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/text_size"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/row_value"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginStart="8dp"
            android:gravity="left"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"/>

    <TextView
            android:text="TextView"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/row_value"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/text_size"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.05" app:layout_constraintEnd_toStartOf="@+id/row_label"
            android:layout_marginEnd="8dp" android:gravity="right" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@color/white_light"
            android:id="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>